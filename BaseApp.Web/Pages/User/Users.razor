@page "/user"
@using BaseApp.Data.User.Dtos
@* @attribute [StreamRendering(true)]
 *@
<h3>User List</h3>

@if (users == null)
{
    <p>Loading...</p>
}
else if (!users.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
@*                     <td>@user.DateOfBirth?.ToShortDateString()</td>
 *@                    <th>@user.Age</th>
                    <td style="white-space:nowrap">
                        <a class="btn btn-primary btn-sm" href="/users/details/@user.Id">Edit</a>
                        <a class="btn btn-primary btn-sm" href="/users/delete/@user.Id?userName=@user.UserName">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="figure-caption">
    <a class="btn btn-primary" role="button" href="/users/create">Create User</a>
</div>
