@page "/users"
@attribute [StreamRendering(true)]

@using BaseApp.Web.Clients
@inject UserClient UserClient;

<h3>User List</h3>

@if (users == null)
{
    <p>Loading...</p>
}
else if (!users.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                string dateOfBirth =
                @user.DateOfBirth.HasValue ?
                @user.DateOfBirth.Value.ToString("dd/MM/yyyy")
                : "not available";

                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@dateOfBirth</td>
                    <th>@user.Age</th>
                    <td class="text-lg-start">
                        <a class="btn btn-primary" role="button" href="/users/details/@user.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="figure-caption">
    <a class="btn btn-primary" role="button" href="/users/create">Create User</a>
</div>