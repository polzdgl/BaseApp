@inherits LayoutComponentBase

<div class="main-layout">
    <!-- Top Bar -->
    <header class="top-bar">
        <RadzenButton Icon="menu" Click="ToggleNavMenu" Class="navbar-toggler" />
        <span class="navbar-brand">BaseApp.Web</span>
        <RadzenButton Icon="person" Text="Login" Click="NavigateToLogin" Class="login-button" />
    </header>

    <!-- Layout Content -->
    <div class="layout-body">
        <RadzenSidebar Expanded="@isSidebarExpanded" Class="radzen-sidebar">
            <NavMenu />
        </RadzenSidebar>

        <RadzenBody Class="content-body">
            <article class="content">
                @Body
            </article>
        </RadzenBody>
    </div>

    <RadzenSidebarToggle Click="ToggleNavMenu" />
</div>

<RadzenComponents />
<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

@code {
    private bool isSidebarExpanded = true;
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private void ToggleNavMenu()
    {
        isSidebarExpanded = !isSidebarExpanded;
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}
